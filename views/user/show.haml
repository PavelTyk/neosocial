.container
  .content
    .row
      .span9
        .well
          %img{:src => @user["data"]["image_url"]}
          %h1=@user["data"]["name"]
          %h2=@user["data"]["location"]
          %h2
            %a{:href => "/user/#{@user["data"]["uid"]}/friends"}
              = "#{@friends_count} Friends"
          %h2
            %a{:href => "/user/#{@user["data"]["uid"]}/likes"}
              = "#{@likes_count} Likes"
      .span3